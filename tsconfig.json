{
  "compilerOptions": {
    "target": "ESNext",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "./tailwind.config.js",
    "./@types",
    "./node_modules/@types",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}